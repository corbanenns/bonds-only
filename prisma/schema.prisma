// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  ADMIN
  MEMBER
}

model Agency {
  id        String   @id @default(cuid())
  name      String   @unique
  address   String?
  phone     String?
  email     String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members   User[]

  @@map("agencies")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  phone         String    @unique
  password      String
  role          Role      @default(MEMBER)
  emailVerified DateTime?
  image         String?

  // Profile fields
  profilePicture String?  @map("profile_picture")
  linkedinUrl    String?  @map("linkedin_url")

  // Onboarding flags
  forcePasswordChange Boolean @default(false) @map("force_password_change")
  profileCompleted    Boolean @default(false) @map("profile_completed")

  // Agency relationship
  agencyId      String?   @map("agency_id")
  agency        Agency?   @relation(fields: [agencyId], references: [id], onDelete: SetNull)

  // Legacy fields (kept for backwards compatibility)
  agencyName    String?   @map("agency_name")
  address       String?

  // Notification preferences
  notifyEmail   Boolean   @default(true) @map("notify_email")
  notifySms     Boolean   @default(false) @map("notify_sms")

  // Track last login for notification logic
  lastLogin     DateTime? @map("last_login")

  // Track when user last viewed the messages page (for accurate notification logic)
  lastViewedMessages DateTime? @map("last_viewed_messages")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts             Account[]
  sessions             Session[]
  posts                Post[]
  events               Event[]
  links                Link[]
  mfaCodes             MFACode[]
  postReactions        PostReaction[]
  passwordResetTokens  PasswordResetToken[]
  postReads            PostRead[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model MFACode {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  code      String
  expires   DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("mfa_codes")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startDate   DateTime @map("start_date")
  endDate     DateTime @map("end_date")
  location    String?
  images      String[] @default([])
  createdBy   String   @map("created_by")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator User @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@map("events")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  authorId  String   @map("author_id")

  // Image attachments
  imageUrl  String?  @map("image_url")

  // Threading - for replies to other posts
  parentId  String?  @map("parent_id")

  // Edit tracking
  isEdited  Boolean  @default(false) @map("is_edited")
  editedAt  DateTime? @map("edited_at")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent    Post?    @relation("PostReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Post[]   @relation("PostReplies")
  reactions PostReaction[]
  reads     PostRead[]

  @@map("posts")
}

model PostReaction {
  id        String   @id @default(cuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  type      String   // "like", "love", "helpful", etc.
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId, type])
  @@map("post_reactions")
}

model Link {
  id          String   @id @default(cuid())
  title       String
  url         String
  description String?
  category    String?
  addedBy     String   @map("added_by")

  // File attachments
  attachmentUrl      String?  @map("attachment_url")
  attachmentName     String?  @map("attachment_name")
  attachmentSize     Int?     @map("attachment_size")
  attachmentType     String?  @map("attachment_type")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [addedBy], references: [id], onDelete: Cascade)

  @@map("links")
}

model PostRead {
  id        String   @id @default(cuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  readAt    DateTime @default(now()) @map("read_at")

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@map("post_reads")
}
